% Gemini theme with University of Washington Husky Color Themes
% https://github.com/anishathalye/gemini

% ====================
% Definitions
% ====================

% UW Brand Color Palette
% https://www.washington.edu/brand/brand-elements/colors/

% UW Brand - Basic
\definecolor{huskypurple}{RGB}{50, 0, 110}
\definecolor{spiritpurple}{RGB}{51, 0, 111}
\definecolor{huskygold}{RGB}{231, 211, 162}
\definecolor{heritagegold}{RGB}{145, 123, 76}
\definecolor{spiritgold}{RGB}{255, 199, 0}

% UW Brand - Accent
\definecolor{accentgreen}{RGB}{170, 219, 30}
\definecolor{accentteal}{RGB}{42, 210, 201}
\definecolor{accentpink}{RGB}{233, 60, 172}
\definecolor{accentlavender}{RGB}{197, 180, 227}

% Original
\definecolor{lightgray}{RGB}{245, 246, 250}
\definecolor{blue}{RGB}{64, 115, 158}
\definecolor{darkblue}{RGB}{39, 60, 117}
\definecolor{lightblue}{RGB}{232, 244, 255}

% ====================
% Theme
% ====================

% Basic colors
\setbeamercolor{palette primary}{fg=black,bg=white}
\setbeamercolor{palette secondary}{fg=black,bg=white}
\setbeamercolor{palette tertiary}{bg=black,fg=white}
\setbeamercolor{palette quaternary}{fg=black,bg=white}
\setbeamercolor{structure}{fg=spiritpurple}

% Headline
\setbeamercolor{headline}{fg=lightgray,bg=huskypurple}
\setbeamercolor{headline rule}{bg=accentlavender}

% Block
\setbeamercolor{block title}{fg=spiritpurple,bg=white}
\setbeamercolor{block separator}{bg=black}
\setbeamercolor{block body}{fg=black,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=spiritpurple,bg=huskygold}
\setbeamercolor{block alerted separator}{bg=black}
\setbeamercolor{block alerted body}{fg=black,bg=huskygold}

% Example Block
\setbeamercolor{block example title}{fg=spiritpurple,bg=accentlavender}
\setbeamercolor{block example separator}{bg=black}
\setbeamercolor{block example body}{fg=black,bg=accentlavender}

% Heading
\setbeamercolor{heading}{fg=black}

% Itemize
\setbeamercolor{item}{fg=spiritpurple}

% Bibliography
\setbeamercolor{bibliography item}{fg=black}
\setbeamercolor{bibliography entry author}{fg=black}
\setbeamercolor{bibliography entry title}{fg=black}
\setbeamercolor{bibliography entry location}{fg=black}
\setbeamercolor{bibliography entry note}{fg=black}
\setbeamertemplate{bibliography entry article}{}
\setbeamertemplate{bibliography entry title}{}
\setbeamertemplate{bibliography entry location}{}
\setbeamertemplate{bibliography entry note}{}
